<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - assessment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<Link rel="stylesheet" href="~/css/toastr.min.css"></Link>
</head>
<body>
	<header>
		<div class="row justify-content-between px-5 py-3 border-top border-2">
			<div class="col-auto" style="cursor: pointer;" id="site-title">
				Etherscan
			</div>
			<div class="col-auto">
				<a href="http://localhost:5283/api/token/export" class="btn btn-warning" role="button" target="_blank">Export</a>
			</div>
		</div>
	</header>
    <div class="container py-3">
        <main role="main" class="p-3 border border-1">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/toastr.min.js"></script>
	<script src="~/lib/chart.umd.js"></script>
	<script src="~/lib/chartjs-plugin-labels.min.js"></script>
	<script src="~/js/doughnut.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script>
		const apiUrl = "http://localhost:5283/api"
	</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
